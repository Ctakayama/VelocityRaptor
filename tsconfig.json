{
   "compilerOptions": {
      "target": "es5",
      "moduleResolution": "node",
      "module": "commonjs",
      "declaration": false,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "pretty": true,
      "allowUnreachableCode": true,
      "allowUnusedLabels": true,
      "noImplicitAny": true,
      "noImplicitReturns": false,
      "noImplicitUseStrict": false,
      "outDir": "root/src/js",
      "baseUrl": "root/src/",
      "listFiles": false,
      "noEmitHelpers": true
   },
   "include": [
      "root/src"
   ],
   "exclude": [
      "node_modules"
   ],
   "compileOnSave": false
}